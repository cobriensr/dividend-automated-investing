# Save exact versions in package.json
save-exact=true

# Use a specific registry (default is the public npm registry)
registry=https://registry.npmjs.org/

# Specify a proxy if you're behind a corporate firewall (uncomment if needed)
# proxy=http://proxy.example.com:8080
# https-proxy=http://proxy.example.com:8080

# Configure npm to use a specific version of Node.js
engine-strict=true

# Disable automatic creation of package-lock.json
# package-lock=false

# Set the default npm version to use
npm-version=10.2.4

# Configure logging (options: silent, error, warn, notice, http, timing, info, verbose, silly)
loglevel=warn

# Set a custom user agent string for npm
user-agent="npm/{npm-version} node/{node-version} {platform} {arch}"

# Configure timeout (in milliseconds)
fetch-timeout=300000

# Set maximum number of retries on network failure
fetch-retries=2

# Configure cache settings
cache=~/.npm
# Add the new prefer-offline setting as cache-min is deprecated
prefer-offline=true
# cache-min=10

# Configure peer dependency behavior
legacy-peer-deps=false

# Configure audit behavior
audit=true
audit-level=moderate

# Configure script-shell (especially useful for Windows compatibility)
script-shell=bash

# Set default access level for published packages
access=public

# Configure automatic error reporting to npm
send-metrics=false

# Set depth for dependency tree resolution
depth=Infinity

# respect package lock file
package-lock=true

# cookie audit vulnerability issue
public-hoist-pattern[]=*cookie*